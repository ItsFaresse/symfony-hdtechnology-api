{{ form_start(form) }}
<div class="row">
    <div class="col md-2">{{ form_row(form.name) }}</div>
    <div class="col md-3">{{ form_row(form.content) }}</div>
    <div class="col md-2">{{ form_row(form.visible) }}</div>
</div>
{{ form_rest(form) }}
<button class="btn btn-primary">{{ button|default('Enregistrer') }}</button>
{{ form_end(form) }}